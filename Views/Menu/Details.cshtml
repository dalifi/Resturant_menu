@model MenuItem
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="details-grid card-ui">
        <div class="details-image">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" />
            }
            else
            {
                <div class="image-placeholder">
                    <span>No Image</span>
                </div>
            }
        </div>

        <div class="details-content">
            <div class="badge-price mb-3">@Model.Price $</div>

            <h2 class="mb-2">@Model.Name</h2>
            <p class="mb-4 text-muted">@Model.Description</p>

            <a class="btn btn-primary me-2"
               asp-controller="Booking"
               asp-action="Create"
               asp-route-menuItemId="@Model.Id">Book Now</a>

            <a class="btn btn-outline-light"
               asp-controller="Menu"
               asp-action="Index">Back to Menu</a>
        </div>
    </div>
</div>
