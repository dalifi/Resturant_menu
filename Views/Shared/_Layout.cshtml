<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Golden Leaf</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header class="app-header">
        <div class="topbar-inner">
            <div class="brand">
                <img src="~/image/l.png" class="brand-logo" alt="Logo" />
            </div>

            <div class="topbar-actions d-flex align-items-center gap-2">
                @{
                    var adminName = Context.Session.GetString("AdminUsername");
                }
                @if (!string.IsNullOrWhiteSpace(adminName))
                {
                    <span class="badge bg-light text-dark rounded-pill px-3">Hello, @adminName</span>
                    <a class="btn btn-danger btn-sm rounded-pill px-3"
                       asp-controller="AdminAccount" asp-action="Logout">Logout</a>
                }
                else
                {
                    <a class="btn btn-light btn-sm rounded-pill px-3"
                       asp-controller="AdminAccount" asp-action="Login">For Admin</a>
                }
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Menu" asp-action="Index">Menu</a>
                    </li>
                  
                    @if (!string.IsNullOrWhiteSpace(adminName))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AdminDashboard" asp-action="Index">Admin Panel</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    </header>

    

    <main class="container-fluid main-wrap">
        @RenderBody()
    </main>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
