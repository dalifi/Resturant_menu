@model Category
@{
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty;
    ViewData["Title"] = action == "CreateCategory" ? "Create Category" : "Edit Category";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-ui">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input name="Name" class="form-control input-ui" value="@Model?.Name" required />
                        </div>
                        <button class="btn btn-primary w-100">@((ViewContext.RouteData.Values["action"]?.ToString() ?? string.Empty) == "CreateCategory" ? "Create" : "Update")</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Categories", "AdminDashboard")" class="btn btn-secondary mt-3">Back to Categories</a>
</div>