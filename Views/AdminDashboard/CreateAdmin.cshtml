@model Admin
@{
    ViewData["Title"] = ViewContext.RouteData.Values["action"].ToString() == "CreateAdmin" ? "Create Admin" : "Edit Admin";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-ui">
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Username</label>
                            <input name="Username" class="form-control input-ui" value="@Model?.Username" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input name="Password" type="password" class="form-control input-ui" value="@Model?.Password" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Full Name</label>
                            <input name="FullName" class="form-control input-ui" value="@Model?.FullName" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input name="Email" type="email" class="form-control input-ui" value="@Model?.Email" />
                        </div>
                        <button class="btn btn-primary w-100">@(ViewContext.RouteData.Values["action"].ToString() == "CreateAdmin" ? "Create" : "Update")</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Admins", "AdminDashboard")" class="btn btn-secondary mt-3">Back to Admins</a>
</div>