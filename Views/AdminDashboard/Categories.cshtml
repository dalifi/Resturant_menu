@model List<Category>
@{
    ViewData["Title"] = "Manage Categories";
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Categories</h1>

    <a href="@Url.Action("CreateCategory", "AdminDashboard")" class="btn btn-primary mb-3">Add New Category</a>

    <div class="card card-ui">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Name</td>
                                <td>
                                    <a href="@Url.Action("EditCategory", "AdminDashboard", new { id = category.Id })" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="@Url.Action("DeleteCategory", "AdminDashboard", new { id = category.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>