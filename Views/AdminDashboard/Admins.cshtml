@model List<Admin>
@{
    ViewData["Title"] = "Manage Admins";
}

<div class="container mt-4">
    <h1 class="mb-4">Manage Admins</h1>

    <a href="@Url.Action("CreateAdmin", "AdminDashboard")" class="btn btn-primary mb-3">Add New Admin</a>

    <div class="card card-ui">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Full Name</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var admin in Model)
                        {
                            <tr>
                                <td>@admin.Id</td>
                                <td>@admin.Username</td>
                                <td>@admin.FullName</td>
                                <td>@admin.Email</td>
                                <td>
                                    <a href="@Url.Action("EditAdmin", "AdminDashboard", new { id = admin.Id })" class="btn btn-sm btn-warning">Edit</a>
                                    <a href="@Url.Action("DeleteAdmin", "AdminDashboard", new { id = admin.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a href="@Url.Action("Index", "AdminDashboard")" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>