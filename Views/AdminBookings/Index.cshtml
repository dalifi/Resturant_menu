@model List<Booking>
@{
    ViewData["Title"] = "All Transactions";
}

<div class="container mt-4">
    <div class="card card-ui">
        <div class="card-body">
            <h4 class="card-title">All Transactions (Bookings)</h4>
            <p class="text-muted">Only admin can view this page.</p>

            <div class="table-responsive">
                <table class="table table-dark table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Customer</th>
                            <th>Table</th>
                            <th>Menu Item</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var b in Model)
                    {
                        <tr>
                            <td>@b.Id</td>
                            <td>@b.CustomerName</td>
                            <td>@b.TableNumber</td>
                            <td>@(b.MenuItem?.Name ?? "-")</td>
                            <td>@b.CreatedAt.ToString("g")</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
